    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/meetPerson"
        android:visibility="gone"
        android:onClick="goToOtherPerson"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me"
            android:id="@+id/otherPersonPic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meet "
            android:layout_marginLeft="15dp"
            android:id="@+id/otherUserName"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Responses"
        android:fontFamily="@fonts/sarala_regular"
        android:textSize="19dp"
        android:textAlignment="center"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:fontFamily="@fonts/sarala_regular"
        android:text="You haven't received any responses yet!"
        android:id="@+id/noResponses"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:gravity ="center"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@android:color/transparent"
        android:id="@+id/listofResponses">
    </ListView>

