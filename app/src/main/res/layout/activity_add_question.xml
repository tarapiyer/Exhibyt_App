<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question*:" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/showQuestionErrors"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/plain_text_input"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="20dp"
        android:hint="Example: Do you like my use of color?"
        android:inputType="text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Pictures"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/upload_work_part1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/planeImage"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:alpha="0.2"
            android:onClick="changeOpacity"
            android:background="@drawable/plane" />

        <ImageView
            android:id="@+id/halloweenImage"
            android:layout_marginTop="30dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:alpha="0.2"
            android:onClick="changeOpacity"
            android:background="@drawable/halloween" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/upload_work_part2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/pumpkinImage"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/pumpkins"
            android:alpha="0.2"
            android:onClick="changeOpacity"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/maskImage"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:alpha="0.2"
            android:onClick="changeOpacity"
            android:background="@drawable/mask" />
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToQuestionsN"
        android:text="Submit"/>
</LinearLayout>
